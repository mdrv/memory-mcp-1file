FROM debian:bookworm-slim

# Install minimal runtime deps
# We need CA certificates for HTTPS requests (e.g. to OpenAI/SurrealDB)
RUN apt-get update && apt-get install -y \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy the GNU binary built locally
# Ensure you ran `cargo build --release` or `scripts/build_all.sh` first
COPY target/release/memory-mcp /usr/local/bin/memory-mcp

# Data directory setup
RUN mkdir -p /data /project
ENV DATA_DIR=/data
ENV LOG_LEVEL=info

# Persist data and allow project mounting
VOLUME ["/data", "/project"]

CMD ["memory-mcp", "--data-dir", "/data"]

FROM debian:testing-slim

# Install minimal runtime deps
# openssl pulls in the correct libssl version (likely libssl3t64)
RUN apt-get update && apt-get install -y \
    openssl \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy locally built binary
COPY memory-mcp-bin /usr/local/bin/memory-mcp

# Data directory
RUN mkdir -p /data
ENV DATA_DIR=/data
ENV LOG_LEVEL=info

CMD ["memory-mcp", "--data-dir", "/data"]
